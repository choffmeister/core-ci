.container
	h1 Task

	div(ng-switch="task.state")
		div.alert.alert-success(ng-switch-when="Succeeded") Succeeded
		div.alert.alert-info(ng-switch-when="Running") Running
		div.alert.alert-warning(ng-switch-when="Pending") Pending
		div.alert.alert-danger(ng-switch-when="Failed") Failed

	ol.shell
		li(ng-repeat="line in shell.output") {{line.content}}
