div.container.container-page(ng-show="messages.length > 0")
	div(ng-repeat="message in messages", ng-switch="message.type")
		div.alert.alert-danger(ng-switch-when="error")
			button.close(type="button", aria-hidden="true", ng-click="dismissMessage(message)") &times;
			| {{message.text}}
		div.alert.alert-warning(ng-switch-when="warning")
			button.close(type="button", aria-hidden="true", ng-click="dismissMessage(message)") &times;
			| {{message.text}}
		div.alert.alert-success(ng-switch-when="success")
			button.close(type="button", aria-hidden="true", ng-click="dismissMessage(message)") &times;
			| {{message.text}}
		div.alert.alert-info(ng-switch-when="info")
			button.close(type="button", aria-hidden="true", ng-click="dismissMessage(message)") &times;
			| {{message.text}}
